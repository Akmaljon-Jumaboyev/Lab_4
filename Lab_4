//Task 2
class Animal {
  void makeSound() {
    print('Some generic animal sound');
  }
}

class Dog extends Animal {
  @override
  void makeSound() {
    print('Woof!');
  }
}


class Cat extends Animal {
  @override
  void makeSound() {
    print('Meow!');
  }
}

void main() {
  var dog = Dog();
  var cat = Cat();

  dog.makeSound(); 
  cat.makeSound(); 
}
