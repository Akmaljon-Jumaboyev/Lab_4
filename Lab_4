//Task 5
enum TrafficLight {
  red(30),
  yellow(5),
  green(45);

  final int durationInSeconds;
  const TrafficLight(this.durationInSeconds);
}

void main() {
  for (var light in TrafficLight.values) {
    print('${light.name}: ${light.durationInSeconds} seconds');
  }
}
